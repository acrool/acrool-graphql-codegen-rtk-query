{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "declaration": true,
  },
  "include": ["src"],
  "exclude": [
    "example",
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.ts.snap"
  ]
}
